<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
    <title>CTFx - Login</title>
</head>
<body>
    <%- include('nav.ejs'); %>
    <div class="container is-max-tablet">
    <div class="is-size-3">Login</div>
    <form action="/users/login" method="POST">
        <div class="field">
            <label for="username" class="label">Username</label>
            <p class="control">
              <input class="input" type="text" placeholder="Username" name="username" id="username">
              <span class="icon is-small is-left">
            </p>
          </div>
          <div class="field">
            <label for="password" class="label">Password</label>
            <p class="control">
              <input class="input" type="password" placeholder="Password" name="password" id="password">
            </p>
          </div>
          <div class="field">
            <p class="control">
              <button class="button is-success">
                Login
              </button>
            </p>
          </div>
      </form>
    </div>
</body>
</html>